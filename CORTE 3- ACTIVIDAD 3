#include <stdio.h>

// Aqui se define a estructura
struct Estudiante {
    int id;
    float NOTA1;
    float NOTA2;
};

int main() {
    // se colocan los valores en la estructura
    struct Estudiante estudiantes[3] = {
        {1, 4.5, 3.0},
        {2, 3.5, 5.0},
        {3, 3.8, 4.6}
    };

    float notaBuscada;
    int encontrado = 0;


    printf("Ingrese la nota que desea buscar en el campo NOTA1: ");
    scanf("%f", &notaBuscada);

    // se va a buscar el valor en el campo NOTA1
    for (int i = 0; i < 3; i++) {
        if (estudiantes[i].NOTA1 == notaBuscada) {
            printf("Nota %.2f encontrada en el estudiante con ID: %d\n", notaBuscada, estudiantes[i].id);
            encontrado = 1;
            break;
        }
    }
    
    if (!encontrado) {
        printf("Nota %.2f no encontrada en el campo NOTA1 de ningÃºn estudiante.\n", notaBuscada);
    }

    return 0;
}
