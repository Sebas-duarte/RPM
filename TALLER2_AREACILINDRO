#include <stdio.h>

int main() {
    float radio, altura;
    float area_base, area_lateral, area_total;

    // aqui se solicita la informacion al usuario en tipo float 
    printf("Ingrese el radio del cilindro: ");
    scanf("%f", &radio);

    printf("Ingrese la altura del cilindro: ");
    scanf("%f", &altura);

    // aqui primero se calcula el área de la base del cilindro
    area_base = 3.1416 * radio * radio;

    // ahora aqui se calcula el área lateral del cilindro
    area_lateral = 2 * 3.1416 * radio * altura;

    // Por ultimo y ya con la anterior informacion se calcular el área total del cilindro.
    area_total = 2 * area_base + area_lateral;

    printf("El area del cilindro es: %.2f\n", area_total);

    return 0;
}

